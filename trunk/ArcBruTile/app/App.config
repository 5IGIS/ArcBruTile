<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="tileDir" value="%APPDATA%\ArcBruTile\" />
    <add key="useGoogle" value="false" />
    <add key="useOSM" value="true" />
    <add key="useBing" value="true" />
    <add key ="BingToken" value=""/>
    <add key ="BingUrl" value="http://t1.staging.tiles.virtualearth.net/tiles/"/>
    <add key="BingMapType" value="Roads"/>
    <add key="useSpatialCloud" value="true" />
    <add key ="SpatialCloudUsername" value=""/>
    <add key ="SpatialCloudPassword" value=""/>
    <add key="useGeoserver" value="true" />
  </appSettings>
  <log4net>
    <appender name="ArcBruTileSystemFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${USERPROFILE}\Local Settings\Application Data\ArcBruTile\ArcBruTile.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionpattern value="%d [%t] %-5p %c - %m%n" />
      </layout>
    </appender>
    <logger name="ArcBruTileSystemLogger">
      <level value="ALL" />
      <appender-ref ref="ArcBruTileSystemFileAppender" />
    </logger>
  </log4net>
</configuration>