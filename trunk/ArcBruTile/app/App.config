<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <appSettings>
    <!-- Local tile directory -->
    <add key="tileDir" value="%APPDATA%\ArcBruTile\"/>
    <!-- Tile timeout in days. After this period new tiles will be retrieved -->
    <add key="tileTimeout" value="1"/>
    <!--  Free tile providers-->
    <!---OSM-->
    <add key="useOSM" value="true"/>
    <!--  Commercial tile providers-->
    <!---Google-->
    <add key="useGoogle" value="true"/>
    <!---Bing-->
    <add key="useBing" value="true"/>
    <add key="useBingHybrid" value="false"/>
    <!--=add key ="BingUrl" value="http://t1.staging.tiles.virtualearth.net/tiles/"/-->
    <add key="BingUrl" value="http://t3.tiles.virtualearth.net/tiles/"/>
    <add key="BingToken" value=""/>
    <!---SpatialCloud-->
    <add key="useSpatialCloud" value="true"/>
    <add key="SpatialCloudUrl" value="http://ss.spatialcloud.com/getsign.cfm/1.0.0/spatialcloud"/>
    <add key="SpatialCloudUsername" value="20100317045633108"/>
    <add key="SpatialCloudPassword" value="12345678"/>
    <!---Geoserver-->
    <add key="useGeoserver" value="false"/>
    <add key="GeoserverUrl" value="http://geoserver.nl/tiles/tilecache.aspx?"/>
    <!-- OS Geo -->
    <add key="useTms" value="true"/>
    <add key="useWmsC" value="true"/>
    <add key="ClientSettingsProvider.ServiceUri" value=""/>
  </appSettings>
  <log4net>
    <appender name="ArcBruTileSystemFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${USERPROFILE}\Local Settings\Application Data\ArcBruTile\ArcBruTile.log"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionpattern value="%d [%t] %-5p %c - %m%n"/>
      </layout>
    </appender>
    <logger name="ArcBruTileSystemLogger">
      <level value="ALL"/>
      <appender-ref ref="ArcBruTileSystemFileAppender"/>
    </logger>
  </log4net>
</configuration>
